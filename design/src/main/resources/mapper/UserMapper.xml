<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.term.design.dao.UserDao">
    <select id="findUserByPhone" resultType="com.term.design.entity.User">
        select *
        from t_user
        where phone=#{phone}
    </select>
    <insert id="insert" >
        insert into
        t_user(name,phone,password)
        values (#{name},#{phone},#{password})
    </insert>
    <select id="findUserByName" resultType="com.term.design.entity.User">
        select *
        from t_user
        where name=#{name}
    </select>
</mapper>